{
  "root": true,
  "env": {
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["server/**/*.js"],
      "env": {
        "node": true,
        "jest": true
      },
      "extends": ["plugin:n/recommended"],
      "settings": {
        "node": {
          "version": ">=18.0.0"
        }
      },
      "rules": {
        "n/no-unpublished-require": "off"
      }
    },
    {
      "files": ["public/js/**/*.js"],
      "env": {
        "browser": true
      },
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": ["public/js/__tests__/**/*.js", "public/js/__fixtures__/**/*.js"],
      "env": {
        "browser": true,
        "jest": true,
        "node": true
      },
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ],
  "rules": {
    "semi": ["error", "always"]
  }
}
